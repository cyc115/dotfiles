# perma alias:
# quickly append expressions to bashrc.
function quickrc {
         if [ "$#" -ne 1 ]; then
            echo "One expression is needed as argument to be concatinated to .bashrc_custom"
         else
            echo "$1" >> ~/.bashrc_custom
         fi
}



