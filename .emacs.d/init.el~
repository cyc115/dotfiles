(require 'package)
;;add MELPA to repo list

(add-to-list 'package-archives '("melpa" . "http://melpa.milkbox.net/packages/"))
;;init package.el

(package-initialize)

;;auto complete
(require 'auto-complete)
;;default config for auto-complete
(require 'auto-complete-config)
(ac-config-default)

;;init yasnippet 

(require 'yasnippet)
(yas-global-mode 1)

;;define a fun which init autocomplete c headers and gets called for c/c++hooks 
